<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sendTime_send_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="#FFF"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/iv_userhead_send_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/user_head_male_1" />

        <TextView
            android:id="@+id/tv_userNick_send_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_userhead_send_folder"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFF"
            android:textSize="14sp" />


        <RelativeLayout
            android:id="@+id/chatcontent_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_userhead_send_folder"
            android:background="@drawable/chat_to_img_bg_normal"
            android:focusable="true"
            android:minHeight="50dp">


            <TextView
                android:id="@+id/tv_file_name_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_icon_send"
                android:text="文件名"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_size_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_file_name_send"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_icon_send"
                android:text="大小"
                android:textColor="#000"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_icon_send"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/png" />

            <ProgressBar
                android:id="@+id/pb_send"
                style="@style/CustomProgressStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progressbar" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>


